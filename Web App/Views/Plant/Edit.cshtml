@model Identity.ViewModels.PlantGreenhouseAlleyViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>@*Edit a plant*@Modifier une plante</h2>
<hr />
<div class="row" style=" width: 99%">
    <div class="col-md-5">
        <form asp-action="Edit">
            <input type="hidden" asp-for="PlantID" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-4">
                <input asp-for="Name" class="form-control" />
                <label asp-for="Name">Nom</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-4">
                <select asp-for="GreenhouseID" class="form-control"
                        asp-items="@(new SelectList(Model.Greenhouses, "Id", "Name"))"></select>
                <label asp-for="GreenhouseID">Serre</label>
                <span asp-validation-for="GreenhouseID" class="text-danger"></span>
            </div>
            <div class="form-floating mb-4">
                <select asp-for="AlleyID" class="form-control"
                        asp-items="@(new SelectList(Model.Alleys, "Id", "Name"))"></select>
                <label asp-for="AlleyID">Allée</label>
                <span asp-validation-for="AlleyID" class="text-danger"></span>
            </div>
            <div class="form-floating mb-4">
                <input asp-for="Weight" class="form-control" />
                <label asp-for="Weight">Rendement</label>
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-floating mb-4">
                <input asp-for="HarvestDate" class="form-control" />
                <label asp-for="HarvestDate">Date de récolte</label>
                <span asp-validation-for="HarvestDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check mb-4">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="State" /> @*@Html.DisplayNameFor(model => model.State)*@État
                </label>
            </div>
            <div class="form-group form-check mb-4">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Verification" /> @*@Html.DisplayNameFor(model => model.Verification)*@Vérifiée?
                </label>
            </div>
            <div class="form-floating mb-4">
                <input asp-for="Remarks" class="form-control" />
                <label asp-for="Remarks" class="control-label">Remarques</label>
                <span asp-validation-for="Remarks" class="text-danger"></span>
            </div>
            @*<input type="submit" value="Save" class="btn btn-primary" />
            <a asp-controller="Plant" asp-action="Index" class="btn btn-secondary">Cancel</a>*@
            <input type="submit" value="Sauvegarder" class="btn btn-primary" />
            <a asp-controller="Plant" asp-action="Index" class="btn btn-secondary">Annuler</a>
        </form>
    </div>
</div>