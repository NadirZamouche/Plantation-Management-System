@model Identity.ViewModels.PlantGreenhouseAlleyViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>@*Create a new plant*@Créer une nouvelle plante</h2>
<hr />
<div class="row" style=" width: 99%">
    <div class="col-md-5">
        <form asp-action="Create">
            @if (ViewBag.Message1 != null)
            {
                <h5 class="alert alert-danger">@ViewBag.Message1</h5>
            }
            @if (ViewBag.Message2 != null)
            {
                <h5 class="alert alert-danger">@ViewBag.Message2</h5>
            }
            @if (ViewBag.Message3 != null)
            {
                <h5 class="alert alert-danger">@ViewBag.Message3</h5>
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-4">
                <input asp-for="Name" class="form-control" />
                <label asp-for="Name">Nom</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-4">
                <select asp-for="GreenhouseID" class="form-control"
                        asp-items="@(new SelectList(Model.Greenhouses, "Id", "Name"))"></select>
                <label asp-for="GreenhouseID">Serre</label>
                <span asp-validation-for="GreenhouseID" class="text-danger"></span>
            </div>
            <div class="form-floating mb-4">
                <select asp-for="AlleyID" class="form-control"
                        asp-items="@(new SelectList(Model.Alleys, "Id", "Name"))"></select>
                <label asp-for="AlleyID">Allée</label>
                <span asp-validation-for="AlleyID" class="text-danger"></span>
            </div>
            @*<input type="submit" value="Save" class="btn btn-primary" />
            <a asp-controller="Plant" asp-action="Index" class="btn btn-secondary">Cancel</a>*@
            <input type="submit" value="Sauvegarder" class="btn btn-primary" />
            <a asp-controller="Plant" asp-action="Index" class="btn btn-secondary">Annuler</a>
        </form>
    </div>
</div>